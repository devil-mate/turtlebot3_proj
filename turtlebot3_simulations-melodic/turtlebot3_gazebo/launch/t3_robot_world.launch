<launch>
  <arg name="model" default="burger" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="robotName" default="turtlebot3" doc="robotName type [turtlebot3, summit_xl]"/>
  <arg name="multi_robot_name" default=""/>
  <arg name="set_lidar_frame_id" default="base_scan"/>
  <arg name="rviz_use" default="false"/>
  <!-- 使用各自的rviz配置，主要用于slam和navigation，其配置不同 -->
  <arg name="perRviz_open" default="true"/> 
  <arg name="gazeboSim" default="true"/>
  <arg name="cmdGUI" default="false"/>
  <arg name="rvizConfig" default="$(find tv_bringup)/rviz/robotBase.rviz"/>
  <arg name="slam_methods" default="gmapping" doc="slam type [gmapping, cartographer, hector, karto, frontier_exploration]"/>
  
  <arg name="xacro_robotFile" default="$(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro"/>
  <arg name="prefix" default="summit_xl_"/>
  <arg name="robot_model"  default="summit_xl_std.urdf.xacro"  doc="Different robot versions: ('')"/>

  

  <include file= "$(find turtlebot3_bringup)/launch/t3_model.launch">
    <arg name ="xacro_robotFile" value="$(arg xacro_robotFile)"/>
  </include>
  <!-- summit_xl_robot -->


  <group if ="$(arg rviz_use)">
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizConfig)"/>
  </group>

  <!-- 启动gazebo -->
  <include file="$(find turtlebot3_gazebo)/launch/t3_gazebo.launch">
  </include>
 
  <group if ="$(arg cmdGUI)">
    <include file="$(find tv_gui)/launch/tv_gui.launch"/>
  </group>
</launch>
